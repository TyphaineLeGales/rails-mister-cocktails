          <% cocktail.doses.each do |dose|  %>
          <!-- <div id="ingredients" class="col-sm-6">
            <p style="font-size: 14px;"> <%= dose.description %> of <%= dose.ingredient.name %></p>
          </div> -->
          <% end %>
      <% end %>
    </div>
  </div>

  <%= link_to new_cocktail_path do %>
     <p style="size:10px; margin:5vw;"><i class="fas fa-cocktail"></i> Add a new coktail</p>
  <%end %>

</div>
